{
  "name": "boardroom-team-07",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently -n \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run start:server\" \"npm run start:client\"",
